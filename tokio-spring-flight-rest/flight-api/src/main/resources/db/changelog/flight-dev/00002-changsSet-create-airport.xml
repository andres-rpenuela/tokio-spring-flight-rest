    <changeSet  author="andres.rpenuela"  id="create-airpot" context="development">
        <createTable tableName="airports">
            <column name="acronym" type="varchar(3)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(10,8)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DECIMAL(10,8)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

