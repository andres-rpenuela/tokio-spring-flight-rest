<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    
    <changeSet  author="andres.rpenuela"  id="create-bases" context="development">
        <createTable tableName="bases">
            <column name="id" type="bigint"  defaultValue="0">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp"
                defaultValueComputed="NOW() ON UPDATE NOW()">
                <constraints nullable="false" />
            </column>
            <column name="counter" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <addAutoIncrement tableName="bases" columnName="id" columnDataType="bigint"/>
    </changeSet>

</databaseChangeLog>
